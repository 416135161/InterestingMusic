<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="115dp"
                android:layout_height="154dp"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/custom_ripple"
                android:clickable="true"
                android:focusable="true"
                android:longClickable="true">

    <RelativeLayout
        android:id="@+id/custom_image_holder"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_gravity="top">

        <com.itheima.roundedimageview.RoundedImageView
            android:id="@+id/image1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#151515"
            android:scaleType="centerCrop"
            app:riv_border_color="#333333"
            app:riv_border_width="0dip"
            app:riv_corner_radius="6dp"
            app:riv_oval="false"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/playlist_bottomHolder"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/custom_image_holder"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/playlist_card_title"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLength="14"
            android:singleLine="true"
            android:text="Title"
            android:textColor="#FFF"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/playlist_num_songs"
            android:layout_width="match_parent"
            android:layout_height="19dp"
            android:layout_below="@+id/playlist_card_title"
            android:layout_marginTop="-5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Artist"
            android:textColor="#EEE"
            android:textSize="8dp" />

    </RelativeLayout>

</RelativeLayout>